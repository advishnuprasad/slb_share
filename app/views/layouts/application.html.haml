!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
          %title= content_for?(:title) ? yield(:title) : "SlbShare"
          = csrf_meta_tags
          / Le HTML5 shim, for IE6-8 support of HTML elements
          /[if lt IE 9]
            <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
          = stylesheet_link_tag "application", :media => "all"
          / For third-generation iPad with high-resolution Retina display:
          / Size should be 144 x 144 pixels
          = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
          / For iPhone with high-resolution Retina display:
          / Size should be 114 x 114 pixels
          = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
          / For first- and second-generation iPad:
          / Size should be 72 x 72 pixels
          = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
          / For non-Retina iPhone, iPod Touch, and Android 2.1+ devices:
          / Size should be 57 x 57 pixels
          = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
          / For all other devices
          / Size should be 32 x 32 pixels
          = favicon_link_tag '/favicon.ico', :rel => 'shortcut icon'
          = javascript_include_tag "application"
  %body
    .navbar.navbar-fixed-top.navbar-default{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => root_path} SLB Share

        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => root_path} Home
            %li.active
              %a{:href => root_path} Posts
            %li
              %a{:href => root_path} My Posts
            %li
              %a{:href => new_post_path} Share Link
          %form.navbar-form.navbar-left{:role => "search"}
            .form-group
              %input.form-control{:placeholder => "Search", :type => "text"}
          - if current_user
            %ul.nav.navbar-nav.navbar-right
              %li#fat-menu.dropdown
                %a#drop3.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button"}
                  = current_user.email
                  %b.caret
                %ul.dropdown-menu{"aria-labelledby" => "drop3", :role => "menu"}
                  %li{:role => "presentation"}
                    %a{:href => "http://twitter.com/fat", :role => "menuitem", :tabindex => "-1"} Edit Profile
                  %li{:role => "presentation"}
                    = link_to "Signout", destroy_user_session_path, :method => :delete
          - else
            %ul.nav.navbar-nav.navbar-right
              %li= link_to "Sign in with google", user_omniauth_authorize_path(:google_apps)
    .container
      .row.row-offcanvas.row-offcanvas-right
        - flash.each do |type, message|
          %div{:class => "alert #{bootstrap_class_for(type)} fade in"}
            %button.close{"data-dismiss" => "alert"} Ã—
            = message
        .col-xs-12.col-sm-12{:style => 'margin:auto'}
          .row
            .col-9.col-sm-9.col-lg-9
              = yield
            .col-3.col-sm-3.col-lg-3
              .panel.panel-primary
                .panel-heading
                  %h3.panel-title Tag Cloud
                .panel-body
                  #tag_cloud
                    - tag_cloud Post.tag_counts, %w{s m l} do |tag, css_class|
                      = link_to tag.name, tag_path(tag.name), class: css_class
              .panel.panel-default
                .panel-heading
                  %h3.panel-title Colleagues
                .panel-body
                  = raw User.all.map { |u| link_to u.email, user_posts_path(user_id: u) }.join('<br/>')
      %hr
        #footer
          .container
            %p.text-muted.credit
              Developed by & for Strata Labs
    / /.container
